/*
How to share this file when it has absolute paths in it? This is a common problem with vscode.
You can use a workspace https://github.com/microsoft/vscode/issues/37519#issuecomment-344414444

Or you can get git to keep this file, but stop tracking changes to it:
https://stackoverflow.com/a/13631525/7331858
git update-index --skip-worktree .\launch.json
git update-index --no-skip-worktree .\launch.json
*/

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug StateSmith code gen",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "exec",
                "C:/Users/some_user/.dotnet/!!! YO DUDE !!! SEE README.MD instructions !!!/.store/dotnet-script/1.4.0/dotnet-script/1.4.0/tools/net6.0/any/dotnet-script.dll",
                "${workspaceRoot}/src/Tutorial1Sm.csx" // you can also use "${file}" to debug active vscode file
            ],
            "logging": {"moduleLoad": false},
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false
        },
        {
            "name": "(Linux) code gen, compile, debug c code",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "gcc-build",
            "program": "${workspaceRoot}/gcc/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/gcc/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

    ]
}